<UserControl x:Class="SjmyLauncher.View.StartMyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:SjmyLauncher.View"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="70" d:DesignWidth="800">
<Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="60"/>
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal">
        <Button x:Name="BtnStarSJMY" Content="启动手机魔域" Command="{Binding cmd_StarSoulApp}" 
                Height="35" Width="150" FontSize="18" Margin="0 10 0 0"/>
        <GroupBox Header="渲染模式" Margin="20 0 0 0" Style="{x:Null}" Height="62">
            <StackPanel Orientation="Horizontal">
                <RadioButton Command="{Binding cmd_ModifyStartAppParam}" 
                             Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}" 
                             CommandParameter="-gl2" Content="OPENGL" VerticalAlignment="Center"/>
                <RadioButton Command="{Binding cmd_ModifyStartAppParam}" 
                             Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}" 
                             CommandParameter="-dx11" Content="DX" Width="70" IsChecked="True" 
                             VerticalAlignment="Center" Margin="10 0 0 0"/>
                <RadioButton Command="{Binding cmd_ModifyStartAppParam}" 
                             Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}" 
                             CommandParameter="-gles2" Content="模拟手机" VerticalAlignment="Center" Margin="10 0 0 0"/>
                </StackPanel>
        </GroupBox>
        <GroupBox Header="启动选项" Margin="20 0 0 0" Style="{x:Null}" Height="62">
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="关闭微端" IsChecked="{Binding IsCloseWD}"  
                          Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}" 
                          VerticalAlignment="Center"/>
                <CheckBox Content="SDK登录" IsChecked="{Binding IsSdk}" 
                          Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}" 
                          VerticalAlignment="Center" Margin="10 0 0 0"/>
            </StackPanel>
        </GroupBox>
        <Button Content="FAQ" Command="{Binding OpenFAQ}" FontSize="18" Width="145" Height="35" Margin="20 10 0 0"/>
    </StackPanel>
</Grid>
</UserControl>
