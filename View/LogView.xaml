<UserControl x:Class="SjmyLauncher.View.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:SjmyLauncher"
             xmlns:local1="clr-namespace:SjmyLauncher.View"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:MsgStringToVisibilityConverter x:Key="MsgStringToVisibilityConverter"/>
    </UserControl.Resources>
<Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
    <DockPanel>
        <TextBox DockPanel.Dock="Bottom" Height="40" IsReadOnly="True" Text="{Binding SelectLog}" Margin="0,0,0,0"></TextBox>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Height="38">
            <TextBox x:Name="SearchLLog" Height="30" Width="350" Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.3" Stretch="None" AlignmentX="Left">
                        <VisualBrush.Visual>
                            <TextBlock FontStyle="Italic" Text="搜索日志"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </TextBox.Resources>
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                            </Trigger>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <ComboBox Width="100" Text="日志过滤" IsEditable="True" IsReadOnly="True" Margin="30,0,20,0" Height="30" VerticalContentAlignment="Center" FontSize="13"> 
                <CheckBox  Content="信息" IsChecked="True" Click="DepartmentComboChoose"/>
                <CheckBox  Content="警告"  IsChecked="True" Foreground="Orange" Click="DepartmentComboChoose"/>
                <CheckBox  Content="错误"  IsChecked="True" Foreground="Red" Click="DepartmentComboChoose"/>
                                <ComboBox Width="100" Text="      部门归属" IsEditable="True" IsReadOnly="True" BorderBrush="Transparent"
                                    MouseEnter="ComboBoxMouseEnter"
                                    MouseLeave="ComboBoxMouseLeave">
                                    <CheckBox Content="程序"  IsChecked="True" Click="DepartmentComboChoose"/>
                                    <CheckBox Content="资源"  IsChecked="True" Click="DepartmentComboChoose"/>
                                    <CheckBox Content="脚本"  IsChecked="True" Click="DepartmentComboChoose"/>
                                    <CheckBox Content="引擎"  IsChecked="True" Click="DepartmentComboChoose"/>
                                </ComboBox>  
            </ComboBox>
            <CheckBox  Height="40" Content="日志折叠" IsChecked="True" Foreground="Black" Click="DepartmentComboChoose" FontSize="13"/>
            <TextBox Height="40" IsReadOnly="True" Text = "{Binding WarningMsgNumber}" Visibility ="{Binding WarningMsgNumber, Converter={StaticResource MsgStringToVisibilityConverter}}" Foreground="Orange" FontSize="14" Margin="15,1,0,0"></TextBox>
            <TextBox Height="40" IsReadOnly="True" Text = "{Binding ErrMsgNumber}" Visibility ="{Binding ErrMsgNumber, Converter={StaticResource MsgStringToVisibilityConverter}}" Foreground="Red" FontSize="14" Margin="15,1,0,0"></TextBox>
        </StackPanel>
        <ListView x:Name="ListViewLog" ItemsSource="{Binding CollectLogInfo}" 
                  SelectionChanged="ListViewLog_SelectionChanged" SelectionMode="Single"

                  Grid.Row="1" Grid.Column="0"  VerticalAlignment="Top" 
                  MouseDoubleClick="ListViewLog_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="时间" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="140" TextAlignment="Left" Foreground="{Binding StrRunResultForeground}" Text="{Binding StrTime, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="部门归属" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="100" TextAlignment="Center" Foreground="{Binding StrTimeForeground}" Text="{Binding strDepartment, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="运行结果" Width="330">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="auto"  TextAlignment="Left" 
                                           Foreground="{Binding StrRunResultForeground}" Text="{Binding StrRunResult, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="数量" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Width="70" TextAlignment="Center" Foreground="{Binding StrRunResultForeground}" Text="{Binding StrResultNumber, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Border>
</UserControl>
